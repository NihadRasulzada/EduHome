@model Slider
<div asp-validation-summary="ModelOnly"></div>
<form enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="@Model.Photo">Photo</label>
        <input asp-for="@Model.Photo" accept="image/*" class="form-control" placeholder="Photo">
        <span asp-validation-for="@Model.Photo"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Title">Title</label>
        <input asp-for="@Model.Title" class="form-control" placeholder="Title">
        <span asp-validation-for="@Model.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description">Description</label>
        <input asp-for="@Model.Description" class="form-control" placeholder="Description">
        <span asp-validation-for="@Model.Description"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>